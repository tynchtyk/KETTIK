<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="desc_style">

        <item name="android:textSize">
            18sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>


    <style name="for_passegers_style">

        <item name="android:textSize">
            32sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="unpressed_button_text">

        <item name="android:textSize"> @dimen/_10ssp</item>
        <item name="android:textColor"> #378243 </item>
        <item name="android:fontFamily"> @font/rubickregular </item>

    </style>


</resources>
