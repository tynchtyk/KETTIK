<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="#4CA2CD"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ellipse"/>

    <TextView
        android:id="@+id/driver_description"
        android:layout_width="304dp"
        android:layout_height="128dp"

        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:text="Добро пожаловать, Имя!
Здесь вы можете добавить
свой маршрут, что-бы пассажиры
смогли найти вас или же искать
пассажира для совместной
поездки. Доброго пути!"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
