<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/header_backround"
    android:orientation="vertical"
    android:paddingTop="@dimen/status_bar_height">

    <android.support.v7.widget.CardView
        android:id="@+id/card_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/userProf"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mask" />



    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/edit"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="76dp"
        android:lineSpacingExtra="1sp"
        android:text="Асанбек Ташов"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/userProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="100dp"
        android:lineSpacingExtra="6sp"
        android:text="Водитель"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/signup"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rectangle2"
            android:text="Войти"
            android:textColor="@color/blue_gradient"/>

        <TextView
            android:id="@+id/guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Вы вошли как гость"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>



</RelativeLayout>