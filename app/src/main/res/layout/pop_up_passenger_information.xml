<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:paddingBottom="@dimen/_15sdp"
        android:id="@+id/group"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_up_shape"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_60sdp"
        android:gravity="center">

        <TextView
            android:layout_marginTop="@dimen/_65sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4CA2CD"
            android:fontFamily="@font/rubickregular"
            android:textSize="@dimen/_13ssp"
            android:textAllCaps="true"
            android:text="Водитель"/>

        <TextView
            android:id="@+id/driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/rubickregular"
            android:textColor="#378243"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/driver_age_and_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubiklight"
            android:textColor="#378243"
            android:textSize="@dimen/_13ssp" />

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:textAlignment="viewEnd"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цена поездки:   "
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/rubiklight"
                android:textColor="#378243"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/rubickregular"
                android:textAlignment="viewStart"
                android:textColor="#378243"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Позвонить"
                android:textSize="@dimen/_15ssp"
                android:textAllCaps="false"
                android:background="@drawable/pop_up_button_shape"
                android:fontFamily="@font/rubickregular"
                android:textColor="#4CA2CD"/>

            <Button
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Написать"
                android:textSize="@dimen/_15ssp"
                android:textAllCaps="false"
                android:background="@drawable/pop_up_button_shape"
                android:fontFamily="@font/rubickregular"
                android:textColor="#4CA2CD"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_alignTop="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user3"
        android:scaleType="fitCenter"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/pop_up_photo_shape" />

    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cancel"
        android:layout_below="@+id/group"
        android:layout_centerHorizontal="true"
        android:scaleType="center" />

</RelativeLayout>