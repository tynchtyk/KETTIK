<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/blue_gradient"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.175"
        android:orientation="vertical"
        android:background="@drawable/header_backround">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.25"
                android:weightSum="1"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/arrow_back" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="73dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/mapasset2" />

                    <ImageView
                        android:id="@+id/calendar"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="38dp"
                        android:background="@drawable/date" />
                    <ImageView
                        android:id="@+id/timeimage"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="38dp"
                        android:background="@drawable/clock" />
                    <ImageView
                        android:id="@+id/quantityimage"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="38dp"
                        android:background="@drawable/pricetag" />
                    <ImageView
                        android:id="@+id/peopleimage"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="38dp"
                        android:background="@drawable/people" />

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/from"
                    android:layout_width="232dp"
                    android:layout_height="48dp"
                    android:singleLine="true"
                    android:hint="Откуда..."
                    android:textSize="16sp"
                    android:textColor="@color/blue_gradient"
                    android:gravity="center"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle2"

                    />
                <EditText
                    android:id="@+id/where"
                    android:layout_width="232dp"
                    android:layout_height="48dp"
                    android:singleLine="true"
                    android:hint="Куда..."
                    android:textSize="16sp"
                    android:textColor="@color/blue_gradient"
                    android:gravity="center"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rectangle2"

                    />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="232dp"
                    android:layout_height="48dp"
                    android:singleLine="true"
                    android:hint="Дата выезда..."
                    android:textSize="16sp"
                    android:textColor="@color/blue_gradient"
                    android:gravity="center"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rectangle2"

                    />
                <TextView
                    android:id="@+id/time"
                    android:layout_width="156dp"
                    android:layout_height="48dp"
                    android:singleLine="true"
                    android:hint="12:00"
                    android:textSize="16sp"
                    android:textColor="@color/blue_gradient"
                    android:gravity="center"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rectangle2"

                    />
                <EditText
                    android:id="@+id/price"
                    android:layout_width="156dp"
                    android:layout_height="48dp"
                    android:singleLine="true"
                    android:hint="Цена..."
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textColor="@color/blue_gradient"
                    android:gravity="center"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rectangle2"

                    />

                <EditText
                    android:id="@+id/quantity"
                    android:layout_width="82dp"
                    android:layout_height="48dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:hint="1"
                    android:textSize="16sp"
                    android:textColor="@color/blue_gradient"
                    android:gravity="center"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rectangle2"

                    />
                <TextView
                    android:id="@+id/quantitytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="*Количество человек"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/some_id"
                        android:layout_width="115dp"
                        android:layout_height="34dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="6dp"
                        android:text="Могу подобрать посылку"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.725">

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_weight="0.4"
            android:background="@drawable/rectangle"
            android:text="Опубликовать"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>





</LinearLayout>
